{
  "name": "youtube-mcp-server",
  "version": "0.1.0",
  "description": "A Model Context Protocol server",
  "private": true,
  "type": "module",
  "bin": {
    "youtube-mcp-server": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "RUN_INTEGRATION_TESTS=true node --expose-gc ./node_modules/.bin/vitest run tests/integration",
    "test:security": "vitest run tests/security",
    "test:e2e": "vitest run tests/integration/end-to-end.test.ts",
    "test:all": "vitest run --coverage",
    "pretest": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "he": "^1.2.0",
    "youtube-transcript": "^1.2.1"
  },
  "devDependencies": {
    "@types/he": "^1.2.3",
    "@types/node": "^20.19.24",
    "@vitest/ui": "^4.0.7",
    "typescript": "^5.9.3",
    "vitest": "^4.0.7"
  }
}
